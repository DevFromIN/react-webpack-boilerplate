{
  "name": "react-webpack-boilerplate",
  "version": "1.0.0",
  "description": "Tired of doing the same stuff again n again",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aboywithjs/react-webpack-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/aboywithjs/react-webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/aboywithjs/react-webpack-boilerplate#readme",
  "engines": {
    "node": ">10.13.0"
  },
  "author": "Selvabalaji S",
  "license": "MIT",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --node-env production --config internals/webpack/webpack.prod.js --color --progress",
    "start": "webpack serve --node-env development --config internals/webpack/webpack.dev.js",
    "start:prod": "webpack serve --node-env production --config internals/webpack/webpack.prod.js",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylelint src/**/*.js",
    "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:eslint:fix": "eslint --ignore-path .gitignore --ignore-pattern internals/scripts --fix",
    "lint:js": "npm run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "prettify": "prettier --write",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserslist": {
    "production": [
      "last 2 versions",
      "> 1%",
      "IE 10"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force"
    ]
  },
  "pre-commit": "lint:staged",
  "dependencies": {
    "core-js": "^3.15.2",
    "cross-env": "^7.0.3",
    "fontfaceobserver": "^2.1.0",
    "immer": "^9.0.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "redux": "^4.1.0",
    "redux-injectors": "^1.3.0",
    "redux-saga": "^1.1.3",
    "regenerator-runtime": "^0.13.7",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^8.0.1",
    "css-loader": "^6.0.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "eslint": "^7.31.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "lint-staged": "^11.0.1",
    "mini-css-extract-plugin": "^2.1.0",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.1",
    "postcss-preset-env": "^6.7.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "react-refresh": "^0.10.0",
    "style-loader": "^3.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-pwa-manifest": "^4.3.0",
    "workbox-webpack-plugin": "^6.1.5"
  }
}
